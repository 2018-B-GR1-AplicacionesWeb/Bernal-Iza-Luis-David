    <button>Buscar</button>

</form>


<a href="/crear-noticia">
<button>Crear Noticia</button>
</a>

<table>
    <!-- tr -> table row -->
    <tr>
        <!-- th -> table header -->
        <th>identificador</th>
        <th>Nombre</th>
        <th>Acciones</th>
    </tr>
    <!-- tr -> table row -->
    <% arreglo.forEach((noticia)=>{%>
    <tr>
