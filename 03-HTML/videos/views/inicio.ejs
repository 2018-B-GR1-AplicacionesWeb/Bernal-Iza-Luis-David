<% const existeMensaje = typeof mensaje !== "undefined"%>


<style>
    table, th, td{
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<% if(existeMensaje){%>
    <p>MENSAJE: <%=mensaje%></p>
<%}%>


<h1><%= usuario %></h1>
<% var apellido = 'Bernal';%>
